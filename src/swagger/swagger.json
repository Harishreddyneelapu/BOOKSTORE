    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "confirmPassword": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    }
                },
                "required": [
                    "firstName",
                    "lastName",
                    "email",
                    "password",
                    "confirmPassword"
                ]
            },
            "Login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "Book": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "discountPrice": {
                        "type": "number"
                    },
                    "bookImage": {
                        "type": "string",
                        "nullable": true
                    },
                    "admin_user_id": {
                        "type": "string"
                    },
                    "bookName": {
                        "type": "string"
                    },
                    "author": {
                        "type": "string"
                    },
                    "quantity": {
                        "type": "number"
                    },
                    "price": {
                        "type": "number"
                    }
                },
                "required": [
                    "description",
                    "discountPrice",
                    "bookName",
                    "author",
                    "quantity",
                    "price"
                ]
            },
            "Cart": {
                "type": "object",
                "properties": {
                    "cartBy": {
                        "type": "string"
                    },
                    "books": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "bookId": {
                                    "type": "string"
                                },
                                "bookName": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "author": {
                                    "type": "string"
                                },
                                "bookImage": {
                                    "type": "string",
                                    "nullable": true
                                },
                                "price": {
                                    "type": "number"
                                },
                                "discountPrice": {
                                    "type": "number"
                                },
                                "quantity": {
                                    "type": "number",
                                    "default": 1
                                }
                            }
                        }
                    },
                    "cartTotal": {
                        "type": "number"
                    },
                    "isPurchased": {
                        "type": "boolean",
                        "default": false
                    }
                }
            },
            "Wishlist": {
                "type": "object",
                "properties": {
                    "wishlistBy": {
                        "type": "string"
                    },
                    "books": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "bookId": {
                                    "type": "string"
                                },
                                "bookName": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "author": {
                                    "type": "string"
                                },
                                "bookImage": {
                                    "type": "string",
                                    "default": null
                                },
                                "price": {
                                    "type": "number"
                                },
                                "discountPrice": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
